{
  "name": "accessgranted",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "packageManager": "yarn@1.22.22",
  "scripts": {
    "dev": "convex dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "husky",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint --fix .",
    "test:unit": "vitest",
    "deploy:convex": "convex deploy -y",
    "ingest": "node scripts/ingest-memories.js",
    "test": "yarn run test:unit -- --run && yarn run test:e2e",
    "test:e2e": "playwright test"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.56.1",
    "@sveltejs/adapter-auto": "^7.0.0",
    "@sveltejs/adapter-cloudflare": "^7.2.4",
    "@sveltejs/kit": "^2.48.5",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@types/node": "^22",
    "@vitest/browser-playwright": "^4.0.10",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.13.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mdsvex": "^0.12.6",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.43.8",
    "svelte-check": "^4.3.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vite": "^7.2.2",
    "vite-plugin-devtools-json": "^1.0.0",
    "vitest": "^4.0.10",
    "vitest-browser-svelte": "^2.0.1",
    "wrangler": "^4.52.1"
  },
  "dependencies": {
    "@auth/core": "0.37.4",
    "@convex-dev/auth": "^0.0.90",
    "convex": "^1.30.0",
    "convex-svelte": "^0.0.12",
    "mammoth": "^1.11.0",
    "marked": "^17.0.1",
    "stripe": "^20.0.0"
  },
  "lint-staged": {
    "*.{js,ts,svelte}": [
      "eslint --max-warnings=0"
    ],
    "*.{js,ts,svelte,json,css,md,html}": [
      "prettier --check"
    ]
  }
}
